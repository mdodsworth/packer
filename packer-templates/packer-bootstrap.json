{
  "builders": [{
    "type": "amazon-ebs",
    "region": "us-west-1",
    "source_ami": "ami-d1180894",
    "instance_type": "t2.micro",
    "ssh_username": "ubuntu",
    "ami_name": "trusty-packer-{{timestamp}}",
    "associate_public_ip_address": true,
    "vpc_id": "vpc-71dc2e14",
    "subnet_id": "subnet-a25d94c7",
    "tags": { "role": "packer" }
  },
  {
    "type": "amazon-chroot",
    "source_ami": "ami-d1180894",
    "ami_name": "trusty-packer-{{timestamp}}",
    "command_wrapper": "sudo {{.Command}}"
  },
  {
    "type": "docker",
    "image": "ubuntu:14.04.1",
    "commit": true
  },
  {
    "type": "virtualbox-ovf",
    "source_path": "vagrant-boxes/box.ovf",
    "ssh_wait_timeout": "1m",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "headless": true,
    "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "only": [ "amazon-chroot" ],
      "inline": [
        "echo '#!/bin/sh' > /usr/sbin/policy-rc.d",
        "echo 'exit 101' >> /usr/sbin/policy-rc.d",
        "chmod a+x /usr/sbin/policy-rc.d"
      ]
    },
    {
      "type": "shell",
      "pause_before": "10s",
      "inline": [ "sudo apt-get update && sudo apt-get install -y ansible" ]
    },
    {
      "type": "ansible-local",
      "playbook_dir": "ansible",
      "playbook_file": "ansible/provision.yml",
      "inventory_file": "ansible/packer-hosts",
      "extra_arguments": [ "--limit=packer"]
    },
    {
      "type": "shell",
      "only": [ "amazon-chroot" ],
      "inline": [ "rm -f /usr/sbin/policy-rc.d" ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "except": [ "docker", "amazon-chroot" ],
      "output": "trusty-packer-{{.Provider}}-{{timestamp}}.box"
    }
  ]
}
