{
  "builders": [{
    "type": "amazon-ebs",
    "region": "us-west-1",
    "source_ami": "ami-4b6f650e",
    "instance_type": "t2.micro",
    "ssh_username": "ec2-user",
    "ami_name": "packer-example {{timestamp}}",
    "associate_public_ip_address": true,
    "vpc_id": "vpc-71dc2e14",
    "subnet_id": "subnet-a25d94c7"
  },
  {
    "type": "virtualbox-ovf",
    "source_path": "/Users/mdodsworth/.vagrant.d/boxes/trusty64/0/virtualbox/box.ovf",
    "ssh_wait_timeout": "1m",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now"
  }],
  "provisioners": [
    {
      "type": "shell",
      "pause_before": "30s",
      "only": ["amazon-ebs"],
      "inline": [
        "sudo yum install ansible --enablerepo=epel --enablerepo=epel-testing -y" ]
    },
    {
      "type": "shell",
      "only": ["virtualbox-ovf"],
      "inline": [
        "sudo apt-get install -y ansible" ]
    },
    {
      "type": "ansible-local",
      "playbook_file": "local.yml",
      "playbook_dir": "."
  }]
}
